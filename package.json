{
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/retextjs/retext",
  "repository": "https://github.com/retextjs/retext",
  "bugs": "https://github.com/retextjs/retext/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "devDependencies": {
    "bail": "^1.0.0",
    "browserify": "^16.0.0",
    "chalk": "^3.0.0",
    "lerna": "^3.0.0",
    "nlcst-test": "^1.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "unist-builder": "^2.0.0",
    "unist-util-remove-position": "^1.0.0",
    "xo": "^0.25.0"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify packages/retext -s retext > retext.js",
    "build-mangle": "browserify packages/retext -s retext -p tinyify > retext.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "import/no-dynamic-require": "off"
    },
    "ignores": [
      "retext.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
